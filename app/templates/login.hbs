{{#paper-card class="login-card"}}
	{{#paper-toolbar}}
		{{#paper-button class="login-options" signup=login action=(action "togglesignup")}}LOGIN{{/paper-button}}
		{{#paper-button class="login-options" signup=signup action=(action "togglesignup")}}SIGN UP{{/paper-button}}
	{{/paper-toolbar}}
	{{paper-input label="Name" value=name}}
	
	{{#animated-if condition=signup}}
		{{paper-input label="Email" value=email required=true required-errortext="Email is required."}}
		{{paper-input label="Phone Number" value=number}}
	{{/animated-if}}
	
	{{paper-input label="Password" value=password}}
	{{#animated-if condition=signup}}
		{{paper-input label="Confirm Password" value=cnfpassword}}
	{{/animated-if}}

	{{#paper-button action=(action "authenticate") primary=true}}Submit{{/paper-button}}
{{/paper-card}}
